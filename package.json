{
  "name": "@imorefun/smart-uni-deploy",
  "version": "0.4.0",
  "description": "自动化部署 uni-app 应用",
  "keywords": [
    "uni-app",
    "uniapp",
    "uni",
    "deploy"
  ],
  "homepage": "https://github.com/imorefun/smart-uni-deploy#readme",
  "bugs": {
    "url": "https://github.com/imorefun/smart-uni-deploy/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imorefun/smart-uni-deploy.git"
  },
  "license": "MIT",
  "author": {
    "name": "imorefun",
    "email": "imorefun@foxmail.com",
    "url": "https://imorefun.github.io"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    }
  },
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "ud": "./dist/cli.mjs",
    "uni-deploy": "./dist/cli.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "check:deps": "ncu --dep dev,optional,prod,packageManager",
    "check:types": "tsc --noEmit",
    "dev": "unbuild --stub",
    "lint": "run-p lint:eslint lint:markdownlint check:types test:coverage",
    "lint:eslint": "eslint ./src --fix --cache",
    "lint:markdownlint": "markdownlint . --fix --ignore-path=.gitignore",
    "release": "pnpm install && pnpm run lint && bumpp",
    "prepare": "is-ci || husky install",
    "prepublishOnly": "pnpm run build",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "dotenv-expand": "^12.0.3",
    "globby": "^16.0.0",
    "got": "^14.6.5",
    "minidev": "^2.2.5",
    "miniprogram-ci": "^2.1.26",
    "p-retry": "^7.1.1",
    "picocolors": "^1.1.1",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "strip-json-comments": "^5.0.3",
    "unconfig": "^7.4.2",
    "update-notifier": "^7.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/eslint-parser": "^7.28.5",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@commitlint/prompt": "^20.2.0",
    "@modyqyw/fabric": "^11.8.1",
    "@modyqyw/utils": "^8.0.0",
    "@tsconfig/node18": "^18.2.6",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^25.0.3",
    "@types/update-notifier": "^6.0.8",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "bumpp": "^10.3.2",
    "commitizen": "^4.3.1",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "lint-staged": "^16.2.7",
    "lodash-es": "^4.17.22",
    "markdownlint-cli": "^0.47.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.7.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "unbuild": "^3.6.1",
    "vitest": "^4.0.16",
    "vue": "^3.5.26"
  },
  "packageManager": "pnpm@9.1.1",
  "engines": {
    "node": ">=14.18"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
